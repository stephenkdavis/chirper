@model Chirper.Models.UserDetailsDto

@{
    ViewBag.Title = "Delete Account";
}

<h2 class="text-center">&#64;@Model.Username</h2>

<h3 class="text-center">Are you sure you want to delete your account?</h3>
<h4 class="text-center">This action is permanent and can not be undone.</h4>

<div class="table-responsive">
    <table class="table table-hover table-bordered align-middle text-center">
        <tbody>
            <tr>
                <th scope="row">
                    <label asp-for="Username"></label>
                </th>
                <td>
                    @Model.Username
                </td>
            </tr>
            <tr>
                <th scope="row">
                    <label asp-for="Email"></label>
                </th>
                <td>
                    @Model.Email
                </td>
            </tr>
            <tr>
                <th scope="row">
                    <label asp-for="FirstName"></label>
                </th>
                <td>
                    @Model.FirstName
                </td>
            </tr>
            <tr>
                <th scope="row">
                    <label asp-for="LastName"></label>
                </th>
                <td>
                    @Model.LastName
                </td>
            </tr>
            <tr>
                <th scope="row">
                    <label asp-for="JoinDate"></label>
                </th>
                <td>
                    @Model.JoinDate.ToLongDateString()
                </td>
            </tr>
            <tr>
                <th scope="row">
                    <label asp-for="ChirpCount"></label>
                </th>
                <td>
                    @Model.ChirpCount
                </td>
            </tr>
            <tr>
                <th scope="row">
                    <label asp-for="FollowerCount"></label>
                </th>
                <td>
                    @Model.FollowerCount
                </td>
            </tr>
            <tr>
                <th scope="row">
                    <label asp-for="LikeCount"></label>
                </th>
                <td>
                    @Model.LikeCount
                </td>
            </tr>
        </tbody>
    </table>
</div>

<div class="row">
    <form class="ms-auto p-2" asp-controller="Account" asp-action="Delete" asp-antiforgery="true" method="post">
        <input type="hidden" asp-for="UserId" />
        <div class="row text-center">
            <div class="col-sm-6 form-group mx-auto">
                <div class="h-captcha" data-sitekey="@ViewBag.SiteKey"></div>
                <input type="submit" id="delete" value="Delete Account" class="btn btn-outline-danger" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script src="https://js.hcaptcha.com/1/api.js" async></script>
}